<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/scalingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/flower_bg"
            android:layout_width="616px"
            android:layout_height="976px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/flow_bg" />

        <RelativeLayout
            android:id="@+id/matchFindingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" >

            <TextView
                android:id="@+id/messagetextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="280px"
                android:gravity="center_horizontal"
                android:text="@string/findingpeopleneartou"
                android:textColor="@color/blue_header_color"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/circleimageview"
                android:layout_width="match_parent"
                android:layout_height="1317px"
                android:layout_centerInParent="true"
                android:background="@drawable/wave_motion_bg" />

            <ImageView
                android:id="@+id/userProfilImage"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_centerInParent="true" />

            <Button
                android:id="@+id/inviteButton"
                android:layout_width="768px"
                android:layout_height="181px"
                android:layout_below="@+id/userProfilImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="400px"
                android:background="@drawable/selector_for_invite_button"
                android:gravity="center"
                android:text="invite friends"
                android:textColor="@color/blue_header_color"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/matchFoundLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/swipeInfoLayout"
                android:layout_width="917px"
                android:layout_height="1240px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120px" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/likedislikelayout"
                android:layout_width="match_parent"
                android:layout_height="265px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/like_dislike_bg" >

                <Button
                    android:id="@+id/dislikeButton"
                    android:layout_width="196px"
                    android:layout_height="196px"
                    android:layout_marginLeft="110px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/dislike_icon" />

                <Button
                    android:id="@+id/matchedUserInfoButton"
                    android:layout_width="170px"
                    android:layout_height="170px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/user_info_icon" />

                <Button
                    android:id="@+id/likeButton"
                    android:layout_width="196px"
                    android:layout_height="196px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="110px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/like_icon" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120px" >

            <ImageView
                android:id="@+id/dislikeFlashIcon"
                android:layout_width="196px"
                android:layout_height="196px"
                android:background="@drawable/dislike_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/likeFlashIcon"
                android:layout_width="196px"
                android:layout_height="196px"
                android:background="@drawable/like_icon"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>