<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textColor="#818181"
            android:text="NAME" />

        <ImageView
            android:id="@+id/separatorImage"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_marginRight="20dp"
            android:background="#B5B5B5" />

        <EditText
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/separatorImage"
            android:layout_below="@+id/separatorImage"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:ems="10"
            android:focusable="false" >
        </EditText>

        <EditText
            android:id="@+id/lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/firstName"
            android:layout_below="@+id/firstName"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastName"
            android:layout_alignLeft="@+id/name"
            android:textColor="#818181"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:text="EMAIL ADDRESS" />

        <ImageView
            android:id="@+id/separatorImage1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/separatorImage"
            android:layout_marginRight="20dp"
            android:background="#B5B5B5" />

        <EditText
            android:id="@+id/emailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separatorImage1"
            android:layout_alignLeft="@+id/firstName"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email"
            android:layout_below="@+id/emailid"
            android:layout_marginTop="30dp"
            android:textColor="#818181"
            android:textSize="18dp"
            android:text="PASSWORD" />

        <ImageView
            android:id="@+id/separatorImage2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/Password"
            android:layout_below="@+id/Password"
            android:layout_marginRight="20dp"
            android:background="#B5B5B5" />

        <EditText
            android:id="@+id/passwordValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separatorImage2"
            android:layout_alignLeft="@+id/firstName"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="textEmailAddress" />

        <ImageView
            android:id="@+id/firstNameEditor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/firstName"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/firstName"
            android:src="@drawable/pencil" />

        <ImageView
            android:id="@+id/lastNameEditor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/lastName"
            android:layout_alignLeft="@+id/firstNameEditor"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pencil" />

        <ImageView
            android:id="@+id/emailEditor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/emailid"
            android:layout_alignLeft="@+id/lastNameEditor"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pencil" />

        <ImageView
            android:id="@+id/passwordEditor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/passwordValue"
            android:layout_alignLeft="@+id/emailEditor"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pencil" />
    </RelativeLayout>

</RelativeLayout>