<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/scalingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="70px" >

            <View
                android:id="@+id/verticalborder"
                android:layout_width="2dp"
                android:layout_height="60px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="100px"
                android:background="#AD0C04"
                android:tag="constantwidth" />

            <TextView
                android:id="@+id/topLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/verticalborder"
                android:text="@string/connect_other_phones_text"
                android:textColor="#AD0C04"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nextGamePageButton"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#FF0F00"
                android:text="NEXT" />

            <View
                android:id="@+id/topbarborder"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="#AD0C04"
                android:tag="constantheight" />
        </RelativeLayout>

        <Button
            android:id="@+id/pendingInvitationsButton"
            android:layout_width="700px"
            android:layout_height="100px"
            android:layout_below="@+id/topLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70px"
            android:text="Pending Invitations"
            android:textSize="18dp" />

        <Button
            android:id="@+id/setNewGameButton"
            android:layout_width="700px"
            android:layout_height="100px"
            android:layout_below="@+id/pendingInvitationsButton"
            android:layout_centerHorizontal="true"
            android:text="Setup New Game"
            android:textSize="18dp" />

        <include
            android:id="@+id/inviteFriendsScreen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/setNewGameButton"
            layout="@layout/invite_friends_screen_list" />
    </RelativeLayout>

</RelativeLayout>