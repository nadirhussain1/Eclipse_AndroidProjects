<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/scallingWrapper"
        android:layout_width="564px"
        android:layout_height="100px"
        android:layout_centerHorizontal="true" >

        <View
            android:id="@+id/background"
            android:layout_width="564px"
            android:layout_height="100px"
            android:layout_alignTop="@+id/candidateName"
            android:layout_centerHorizontal="true"
            android:background="#4F000000" />

        <TextView
            android:id="@+id/candidateName"
            android:layout_width="170px"
            android:layout_height="100px"
            android:layout_marginLeft="12px"
            android:gravity="center_vertical"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="18dp" />

        <View
            android:id="@+id/border"
            android:layout_width="6px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/candidateName"
            android:background="#000000" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="170px"
            android:layout_height="100px"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@+id/border"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp" />

        <View
            android:id="@+id/secondborder"
            android:layout_width="6px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/amount"
            android:background="#000000" />

        <TextView
            android:id="@+id/difference"
            android:layout_width="170px"
            android:layout_height="100px"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@+id/secondborder"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000000"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>