<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/scalingWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="80px" >

            <Button
                android:id="@+id/previewBackButton"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/appName"
                android:background="#FF00FF"
                android:text="Back" />

            <View
                android:id="@+id/backbarborder"
                android:layout_width="2dp"
                android:layout_height="60px"
                android:layout_toRightOf="@+id/previewBackButton"
                android:background="#AD0C04"
                android:tag="constantwidth" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/backbarborder"
                android:text="@string/app_name"
                android:textColor="#AD0C04"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/topbarborder"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/appName"
                android:background="#AD0C04"
                android:tag="constantheight" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/finalBillLayout"
            android:layout_width="match_parent"
            android:layout_height="225px"
            android:layout_below="@+id/topLayout" >

            <RelativeLayout
                android:id="@+id/adminLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/adminGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="When all players are ready,enter the \nfinal bill amount and press OK"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/finalBillEditText"
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adminGuide"
                    android:layout_marginLeft="10px"
                    android:hint="Final bill amount"
                    android:inputType="numberDecimal"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/adminSeeWhoPays"
                    android:layout_width="300px"
                    android:layout_height="80px"
                    android:layout_below="@+id/adminGuide"
                    android:layout_toRightOf="@+id/finalBillEditText"
                    android:text="OK"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/finalBillText"
                android:layout_width="680px"
                android:layout_height="80px"
                android:layout_centerInParent="true"
                android:background="#CECECE"
                android:gravity="center"
                android:text="Final Bill Amount:"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/PlayersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/finalBillLayout"
            android:layout_marginLeft="30px"
            android:layout_marginTop="50px"
            android:text="Players"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/previewPlayersList"
            android:layout_width="680px"
            android:layout_height="450px"
            android:layout_below="@+id/PlayersText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px" >
        </ListView>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_below="@+id/previewPlayersList"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:text="Start Over"
            android:textSize="18dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/finalProgressBar"
            android:layout_width="300px"
            android:layout_height="300px"
            android:visibility="gone"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>