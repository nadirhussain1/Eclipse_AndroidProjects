<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="unitsValue" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#d0d0d0</item>
        <item name="android:freezesText">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="unitsType" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:layout_marginTop">10dp</item> -->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calculatorValue" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="calculatorType" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="insuranceBigOption" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="insuranceSmallOption" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="boldText">
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:textStyle">bold</item>
    </style>
     <style name="normalText">
        <item name="android:textColor">#7D7D7D</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>